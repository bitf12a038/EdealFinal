<html xmlns="http://www.w3.org/1999/xhtml">
<head>

   
     <script src="~/Scripts/jqueryfile.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Contents/bootstrap.css" rel="stylesheet" />

    <title>@ViewBag.Title</title>

</head>
<body>
   

    <div class="container-fluid" style="background: black;">
       
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">

            <div class="nav-hearder">

                <a class="navbar-brand" href="/Home/Index">E-DEAL</a>
            </div>
            <div>

                 <ul class="nav navbar-nav">
                    <li class="active"><a href="/Home/Index">HOME</a></li>
                    <li><a href="/Seller/SellItem">E-SELLER</a></li>
                    <li><a href="/Buyer/BuyAT">E-BUYER</a></li>
                     @if (Session["un"] != null)
                    {
                        <li><a href="/Buyer/YourAds">YOUR ADS</a></li>
                    }
                    <li><a href="/About/About">ABOUT US</a></li>
                     <li><a href="/Admin/Index" target="_blank">ADMIN-PANEL</a></li>
                </ul>

                <div>
                    @if(Session["un"] == null){
                    <form class="navbar-form navbar-right " action="/SuperUser/SignUp" role="search">
                        <button type="submit" class="btn btn-info">SIGN UP</button>
                    </form>
                    
                    <form class="navbar-form navbar-right " action="/SuperUser/Login" role="rowheader">
                        <button type="submit" class="btn btn-success">SIGN IN</button>
                    </form>
                    }else{
                        
                        
                        <form class="navbar-form navbar-right " action="/SuperUser/Logout" role="rowheader">
                            <label class="navbar-form navbar-right" style="color:white;">@Session["uName"]</label>
                        <button type="submit" class="btn btn-warning">SIGN OUT</button>
                    </form>
                    }
                </div>
s

            </div>
        </nav>




        <div id="myCarousel" class="carousel slide">

            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Images/bs1.png" width="1900" alt="Chania" />
                </div>

                <div class="item">
                    <img src="~/Images/ed1.png" width="1900" alt="Chania" />
                    
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="icon-prev" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="icon-next" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="jumbotron">

            <div class="row">
                <div class="col-md-3">
                    <div class="navbar-static-top">
                        <br />
                        <br />
                     
                        <a class="list-group-item active">DEAL TYPE</a>
                        <a href="/Buyer/BuyMobiles" class="list-group-item label-warning">MOBILES</a>
                        <a href="/Buyer/BuyElectronics" class="list-group-item label-warning"">ELECTRONICS</a>
                        <a href="/Buyer/BuyCars" class="list-group-item label-warning"">CARS</a>
                        <a href="/Buyer/BuyComputers" class="list-group-item label-warning"">COMPUTERS</a>
                        <a href="/Buyer/BuyLaptops" class="list-group-item label-warning"">LAPTOPS</a>
                       
                       
                    </div>
                </div>  
                    @RenderBody()
                </div>
            <footer class="modal-footer">COPY RIGHT 2015</footer>
        </div>
    </div>

</body>
</html>
