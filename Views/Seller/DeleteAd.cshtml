@{
    ViewBag.Title = "DeleteAd";
}

@model Project_Ead_EDEAL.Models.Item

@{
    Layout = "~/Views/Shared/LayoutOther.cshtml";
}


<div class="col-xs-9">
    <br />
    <br />
    <div>
        <h2>LARGEST SELLING AND BUYING SITE...</h2>
    </div>
    <div>
        <h2>DELETE YOUR ADD :)</h2>
    </div>


    <div class="navbar navbar-default">
        <br />
        <form class="form col-md-8 center-block" method="post" action="/Seller/ConfirmDelete/@Model.Id">

            <div class="form-group">
               
                Title : @Html.LabelFor(x => x.Title, Model.Title, new { @class="form-control input-lg"})
            </div>
            <div class="form-group">
               Cell :   @Html.LabelFor(x => x.CellNo, Model.CellNo, new { @class="form-control input-lg"})
            </div>
            <div class="form-group">
               Price :  <label class="form-control input-lg">@Model.Price</label>
            </div>
             <div class="form-group">
               Description :  @Html.LabelFor(x => x.Description, Model.Description, new { @class="form-control input-lg"})
            </div>
             <div class="form-group">
                 Image : 
                 <br />
                 <img src="@Model.Image"  width ="150" height="150"/>
                 <br />
            </div>
            
            <div class="form-group">
                <br />
                <br />
                <button class="btn btn-primary btn-lg btn-block">DELETE</button>

            </div>
        </form>

    </div>
</div>


