@{
    ViewBag.Title = "EditAd";
}

@model Project_Ead_EDEAL.Models.Item

@{
    Layout = "~/Views/Shared/LayoutOther.cshtml";
}


<div class="col-xs-9">
    <br />
    <br />
    <div>
        <h2>LARGEST SELLING AND BUYING SITE...</h2>
    </div>
    <div>
        <h2>EDITs YOUR ADD :)</h2>
    </div>


    <div class="navbar navbar-default">
        <br />
        <form class="form col-md-8 center-block" method="post" action="/Seller/ConfirmEdit" enctype="multipart/form-data">

            <div class="form-group">
                @Html.TextBoxFor(x => x.Id, new {@class="form-control input-lg",@required="required",placeholder="Title",type="hidden",@value=@Model.Id})
            </div>
            <div class="form-group">
                Title : @Html.TextBoxFor(x => x.Title, new {@class="form-control input-lg",@required="required",placeholder="Title",@value=@Model.Title})
            </div>
            <div class="form-group">
                Cell :  @Html.TextBoxFor(x => x.CellNo, new {@class="form-control input-lg",@required="required",placeholder="Cell#",@value=@Model.CellNo})
            </div>
            <div class="form-group">
                Price : @Html.TextBoxFor(x => x.Price, new {@class="form-control input-lg",@required="required",placeholder="Price",@value=@Model.Price})
            </div>
            <div class="form-group">
                Description : @Html.TextAreaFor(x => x.Description, new {@class="form-control input-lg",@required="required",placeholder="Description",@value=@Model.Description})
            </div>
            <input type="hidden" value="@Model.Image" id="iname" name="iname"/>
            <div class="form-group">
                Image : 
                 <br />
                <img src="@Model.Image"  width ="150" height="150"/>
                <br />
                <br />
                 <input name="uf" id="uf" class="btn btn-success btn-lg btn-block" type="file" />
            </div>
            <div class="form-group">
                @Html.DropDownListFor(x=>x.Category, new List<SelectListItem>
                                    {
                                         new SelectListItem{ Text=@Model.Category, Value = @Model.Category , Selected=true},
                                         new SelectListItem{ Text="Mobiles", Value = "Mobiles" }, 
                                             new SelectListItem{ Text="Electronics", Value = "Electronics" },
                                            new SelectListItem{ Text="Cars", Value = "Cars" },
                                             new SelectListItem{ Text="Computers", Value = "Computers" },
                                              new SelectListItem{ Text="Laptops", Value = "Laptops" }
                                     } ,new {@class="form-control input-lg"})
                
            </div>
            <div class="form-group">
                @Html.DropDownListFor(x=>x.City, new List<SelectListItem>
                                    {
                                        new SelectListItem{ Text=@Model.City, Value = @Model.City , Selected=true },
                                         new SelectListItem{ Text="Lahore", Value = "Lahore" }, 
                                             new SelectListItem{ Text="Karachi", Value = "Karachi" },
                                            new SelectListItem{ Text="Islamabad", Value = "Islamabad" },
                                             new SelectListItem{ Text="Faislabad", Value = "Faisalabad" },
                                              new SelectListItem{ Text="Peshawer", Value = "Peshawer" }
                                     } ,new {@class="form-control input-lg"})
                
            </div>
            <div class="form-group">
                <br />
                <br />
                <button class="btn btn-primary btn-lg btn-block">UPDATE</button>s

            </div>
        </form>

    </div>
</div>


